

<div class="col-lg-12">  

    <h3>Creating a New Dojo</h3>

	<% if flash[:errors] %>
		<% flash[:errors].each do |e| %>
			<p><%= e %></p>
		<% end %>
	<% end %>

	<div class="panel-heading"> 
	<%= form_for(@dojo) do |d| %>

	<div class="form-group">
		<%= d.label :branch %>
		<%= d.text_field :branch %>
	
		<%= d.label :street %>
		<%= d.text_field :street %>

		<%= d.label :city %>
		<%= d.text_field :city %>

		<%= d.label :state %>
		<%= d.text_field :state %>
		<button type="submit" class="btn btn-default">Create</button>
	</div>

	<% end %>
	<a href="/dojos">Home</a>
</div>


