
<div class="col-lg-12">    

    <h3>Creating a New Student</h3>

	<% if flash[:errors] %>
		<% flash[:errors].each do |e| %>
			<p><%= e %></p>
		<% end %>
	<% end %>
	
	<div class="panel-heading"> 

		<form action="/dojos/<%= @dojo.id %>/students" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<p>
				<label>First Name:</label>
				<input type="text" name=student[first_name]>
			</p>
			<p>
				<label>Last Name:</label>
				<input type="text" name="student[last_name]">
			</p>
			<p>
				<label>Email:</label>
				<input type="text" name=student[email]>
			</p>
			<p>
				<label>Dojo:</label>
				<select name="student[dojo_id]">
					<% @dojos.each do |dojo| %>
						<% if dojo == @dojo %>
							<option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
						<% else %>
							<option value="<%= dojo.id %>"><%= dojo.branch %></option>
						<% end %>
					<% end %>	
				</select>
			</p>

			<button type="submit" class="btn btn-default">Create</button>

		</form>
	</div>
	
	<%= my_link_to "Home", dojos_path %> | <%= my_link_to "#{@dojo.branch}", dojos_show_path(@dojo.id) %>

</div>


